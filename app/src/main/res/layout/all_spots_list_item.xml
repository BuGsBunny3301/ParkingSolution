<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="7dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="2dp"
        android:background="#ffffff">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/location_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/location_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Location"
                android:textColor="#38415C"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/parking_rating"
                app:layout_constraintStart_toEndOf="@+id/location_image"/>


            <TextView
                android:id="@+id/parking_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating: 3.4 / 5"
                android:textColor="@color/brownishColor"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toBottomOf="@id/location_name"
                app:layout_constraintStart_toEndOf="@+id/location_image"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/parking_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/parking_rating"
                app:layout_constraintBottom_toBottomOf="@id/parking_rating"
                android:text="Price: 3 $/h"
                android:textColor="@color/brownishColor"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginEnd="20dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>